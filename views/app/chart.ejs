<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Oswald:200,400,500" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=DM+Sans&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=DM+Sans|Open+Sans&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.2/dist/Chart.min.js" integrity="sha256-ZIWqk8gTF95t9mHIlxHL4ycYu52IHVcDiE9r5WauNjE=" crossorigin="anonymous"></script>

</head>
<body>
  <% let chartWeekday = [];
  let chartWorkHrs = [];

  logs.forEach((obj) => {
    chartWeekday.push("w0"+obj["week"]+"d0"+obj["weekday"]);
  })

  logs.forEach((obj) => {
    chartWorkHrs.push(obj["classHrs"]+obj["homeworkHrs"]);
  })

  console.log(chartWeekday);
  console.log(chartWorkHrs); %>

  <% if(overview){ %>
    <h1>Overview: Day Vs Total Working Hours</h1>
  <%} else { %>
    <h1>Week <%=logs[0].week%>: Day Vs Total Working Hours</h1>
  <% } %>

  <canvas id="myChart" width="400" height="400"></canvas>

  <script>
    let chartWeekday = "<%=chartWeekday%>".split(",")
    console.log(chartWeekday);

    let chartWorkHrs = "<%=chartWorkHrs%>".split(",")
    console.log(chartWorkHrs);
    console.log(typeof(chartWorkHrs));

    // chartHomeworkHrs.map(x => x*2);

    // console.log(typeof(parseInt(chartHomeworkHrs[0])));

    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: chartWeekday,
        datasets: [{
          label: 'Totaly working hours',
          data: chartWorkHrs,
          backgroundColor: 'rgba(54, 162, 235, 0.2)',
          borderColor: 'rgba(255, 99, 132, 1)',
          borderWidth: 1
        }]
      },
      options: {
        legend:{display:false},
        scales: {
          yAxes: [{
            scaleLabel: {display: true, labelString: 'Total working hours'},
            ticks: {beginAtZero: true}
          }],
          xAxes: [{
            scaleLabel: {display: true, labelString: 'Day'}
          }]
        }
      }
    });

  </script>







</body>
</html>
